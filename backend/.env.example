# ========================================
# TRACKLY BACKEND ENVIRONMENT CONFIGURATION
# ========================================

# MongoDB Connection
# Get this from MongoDB Atlas or local MongoDB installation
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/trackly?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your_super_secret_jwt_key_with_64_chars_minimum_for_security_abcd1234
JWT_EXPIRES_IN=24h

# Security Configuration
BCRYPT_SALT_ROUNDS=12

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration (comma-separated for production)
# Example: https://yourapp.com,https://www.yourapp.com
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Optional: Seeding Script Configuration
SEED_USER_ID=
SEED_DAYS=14
SEED_EXP_MIN=1
SEED_EXP_MAX=3
SEED_TASK_MIN=1
SEED_TASK_MAX=4
SEED_HIGH_SPEND_DAYS=3
SEED_HIGH_SPEND_MULTIPLIER=2.5
SEED_ZERO_PROD_DAYS=2

# Production Monitoring (Optional)
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=error
