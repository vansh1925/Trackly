{
  "info": {
    "name": "Trackly API",
    "description": "Complete API collection for Trackly expense & task tracker",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/register",
              "host": ["{{baseUrl}}"],
              "path": ["users", "register"]
            },
            "description": "Register a new user account"
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"SecurePass@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/login",
              "host": ["{{baseUrl}}"],
              "path": ["users", "login"]
            },
            "description": "Login and get JWT token"
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["users", "me"]
            },
            "description": "Get current authenticated user info"
          }
        }
      ]
    },
    {
      "name": "Expenses",
      "item": [
        {
          "name": "Create Expense",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Grocery Shopping\",\n  \"amount\": 2500,\n  \"date\": \"2026-01-20\",\n  \"category\": \"Food\",\n  \"description\": \"Weekly groceries at supermarket\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/expenses/add",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "add"]
            },
            "description": "Create a new expense"
          }
        },
        {
          "name": "Get All Expenses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/expenses/getall?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "getall"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get paginated list of expenses"
          }
        },
        {
          "name": "Get Single Expense",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/expenses/get/:id",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "get", ":id"]
            },
            "description": "Get a specific expense by ID"
          }
        },
        {
          "name": "Update Expense",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Grocery Shopping\",\n  \"amount\": 3000,\n  \"date\": \"2026-01-20\",\n  \"category\": \"Food\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/expenses/update/:id",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "update", ":id"]
            },
            "description": "Update an existing expense"
          }
        },
        {
          "name": "Delete Expense",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/expenses/delete/:id",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "delete", ":id"]
            },
            "description": "Delete an expense"
          }
        },
        {
          "name": "Get Total Expenses",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/expenses/total?period=monthly&value=2026-01",
              "host": ["{{baseUrl}}"],
              "path": ["expenses", "total"],
              "query": [
                {
                  "key": "period",
                  "value": "monthly"
                },
                {
                  "key": "value",
                  "value": "2026-01"
                }
              ]
            },
            "description": "Get total expenses for a period (daily/monthly/yearly)"
          }
        }
      ]
    },
